<style-scheme id="coffee-paper" _name="Coffee Paper" version="1.0">

  <!-- metadata -->
  <author>Ben Hancock</author>
  <_description>Light color scheme designed to imitate working on paper</_description>

  <!-- color definitions -->
  <color name="ink" value="#000000" />
  <color name="paper" value="#FCF8F2" />
  <color name="yellow" value="#FFFCBA" />
  <color name="light-purple" value="#EFE5FC" />
  <color name="light-red" value="#FFBABC" /> <!-- unused -->
  <color name="deep-red" value="#c43a31" />
  <color name="light-blue" value="#ABD3EA" />
  <color name="deep-blue" value="#1C589E" />
  <color name="green" value="#216609" />
  <color name="light-brown" value="#EAD3A8" /> <!-- unused -->
  <color name="dark-brown" value="#7C3E11" />
  <color name="light-orange" value="#FFD9BA" />

  <!-- Global Settings -->
  <style name="text" background="paper" />
  <style name="current-line" background="light-purple" />
  <style name="selection" foreground="ink" background="yellow" />
  <style name="cursor" foreground="ink" />
  <style name="line-numbers" background="#FFFFFF" />

  <!-- Bracket Matching -->
  <style name="bracket-match" foreground="deep-blue" background="light-blue" bold="true" />
  <style name="bracket-mismatch" foreground="paper" background="deep-red" bold="true" />

  <!-- Search Matching -->
  <style name="search-match" background="light-orange" />

  <!-- Comments -->
  <style name="def:comment" foreground="dark-brown" />
  <style name="def:shebang" foreground="dark-brown" />
  <style name="def:doc-comment" foreground="dark-brown" />
  <style name="def:note" background="light-red" />

  <!-- Code -->
  <style name="def:string" foreground="deep-blue" />
  <style name="def:error" background="light-red" />

  <!-- Markup -->
  <style name="def:heading" foreground="deep-blue" bold="true" />
  <style name="def:inline-code" foreground="green" />
  <style name="def:emphasis" italic="true"/>
  <style name="def:deletion" strikethrough="true"/>
  <style name="def:link-text" foreground="green"/>
  <style name="def:link-symbol" foreground="deep-blue" />
  <style name="def:link-destination" underline="single"/>
  <style name="def:strong-emphasis" bold="true"/>
  <style name="def:preformatted-section" foreground="green" />

  <!-- Language-Specific Styles -->
  <style name="xml:tags" foreground="green"/>
  <style name="xml:attribute-name" foreground="green"/>
  <style name="xml:namespace" foreground="light-brown" />

  <style name="diff:added-line" background="#B6E0AF"/>
  <style name="diff:removed-line" background="#E0AFB6"/>

</style-scheme>
